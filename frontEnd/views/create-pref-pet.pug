extends layout.pug

block content
    .pet-pref-container
        form(id="createPetPrefForm" class="pet-pref-form")
            div(id="ppfhtwo" class="pet-pref-form-header")
                h1 Let's find you the perfect pet!
                p Give us some information about your ideal pet. We'd appreciate you being as specific as possible so we can help you to the best of our abilities with our proprietary pet-matching algorithm.
            div(class="age-sex-two")
                label(for="age")
                select(class="dropdown" name="age" id="age" placeholder="Age")
                        option(value=1) Puppy (0-1)
                        option(value=2) Young (1-3)
                        option(value=3) Middle Aged (3-7)
                        option(value=4) Adult (7-10)
                        option(value=5) Mature (10+)
                label(for="sex")
                select(class="dropdown" name="sex" id="sex" placeholder="Sex")
                    option(value=1) Male
                    option(value=2) Female
            div(class="size-breed-two")
                label(for="size")
                select(class="dropdown" name="size" id="size")
                    option(value=1) Toy
                    option(value=2) Small
                    option(value=3) Medium
                    option(value=4) Large
                    option(value=5) X-Large
                label(for="breeds")
                select(class="dropdown" name="breeds" id="breeds" required)
                    each breed in breeds
                        option(value=`${breed.id}`)= breed.breedName
            div(class="form-checkbox")
                label(class="checkbox-label") Is the pet ok with children?
                    input(type="checkbox" name="isOkayKids" id="isOkayKids")
                    span(class="custom-checkbox")
            div(class="form-checkbox") 
                label(class="checkbox-label") Is the pet ok with other pets?
                    input(type="checkbox" name="isOkayPets" id="isOkayPets")
                    span(class="custom-checkbox")
            div(class="form-submit-button")
                button.button(type="submit") Add Preferred Pet
    script(type="module" src="js/create-preferred-pet.js")

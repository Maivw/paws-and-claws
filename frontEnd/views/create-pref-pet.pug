extends layout.pug

block content
    .forms-container
        form.create-pref-pet
            .create-pref-header
                h1 Let's find you the perfect pet!
                p Enter in what you are looking for in a furry friend.
            .form-element
                label(for="breeds")
                select(name="breeds" id="breeds" required)
                    each breed in breeds
                        option(value=`${breed.id}`)= breed.breedName
            .form-element
                label(for="age")
                select(name="age" id="age" placeholder="Age")
                        option(value=1) Puppy (0-1)
                        option(value=2) Young (1-3)
                        option(value=3) Middle Aged (3-7)
                        option(value=4) Adult (7-10)
                        option(value=5) Mature (10+)
            .form-element
                label(for="sex")
                select(name="sex" id="sex" placeholder="Sex")
                    option(value=1) Male
                    option(value=2) Female
            .form-element
                label(for="size")
                select(name="size" id="size")
                    option(value=1) Toy
                    option(value=2) Small
                    option(value=3) Medium
                    option(value=4) Large
                    option(value=5) X-Large
            .form-element
                label(for="isOkayKids") Is the pet ok with children?
                input(type="checkbox" name="isOkayKids" id="isOkayKids")
            .form-element 
                label(for="isOkayPets") Is the pet ok with other pets?
                input(type="checkbox" name="isOkayPets" id="isOkayPets")
            .form-element
                button.button(type="submit") Add Preferred Pet
    script(type="module" src="js/create-preferred-pet.js")

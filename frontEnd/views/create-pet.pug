extends layout.pug

block content
    .forms-container
        form.create-pet
            .create-pet-header
                h1 Add a pet to the adoption list
                p Let's find the pets at your shelter a good Home!
            .form-element 
                label(for="petName") Pet Name:
                input(type="text" name="petName" id="petName" placeholder="Pet Name" value=petName)
            .form-element
                label(for="breeds") Breed:
                select(name="breeds" id="breeds" required)
                    each breed in breeds
                        option(value=`${breed.id}`)= breed.breedName
                //- label(for="petName") Pet Name
            .form-element
                label(for="age") Age:
                select(name="age" id="age" placeholder="Age")
                    option(value=1) Puppy (0-1)
                    option(value=2) Young (1-3)
                    option(value=3) Middle Aged (3-7)
                    option(value=4) Adult (7-10)
                    option(value=5) Mature (10+)
            .form-element
                label(for="sex") Sex:
                select(name="sex" id="sex" placeholder="Sex")
                    option(value=1) Male
                    option(value=2) Female
            .form-element
                label(for="size") Size:
                select(name="size" id="size" placeholder="Sex")
                    option(value=1) Toy
                    option(value=2) Small
                    option(value=3) Medium
                    option(value=4) Large
                    option(value=5) X-Large
            .form-element
                label(for="description") Describe the pet:
                textarea(id = "description" name="description" placeholder="Describe The Pet")
            .form-element 
                label(for="photo") Add an image of the pet:
                input(name="photo" type="text" id="photo" placeholder="photo url")
            .form-element
                label(for="isOkayKids") Is the pet ok with children?
                input(type="checkbox" id="idOkayKids" name="isOkayKids")
            .form-element
                label(for="isOkayPets") Is the pet ok with other pets?
                input(type="checkbox" name="isOkayPets" id="isOkayPets") 
            .form-element
            button.button(type="submit") Add Pet
    script(type="module" src="js/create-pet.js")

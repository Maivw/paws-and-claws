extends layout.pug

block content
    .add-pet-container
        form.edit-pet
            .create-pet-header
                h1 Edit this pet's information
            .text-container
                input(type="text" name="petName" id="petName" placeholder="Pet Name" value=petName)
            div(class="form-breed-age")
                select( class="dropdown" name="breeds" id="breeds" required)
                    each breed in breeds
                        option(value=`${breed.id}`)= breed.breedName
                //- label(for="petName") Pet Name 
                select(class="dropdown" name="age" id="age" placeholder="Age")
                    option(value=1) Puppy (0-1)
                    option(value=2) Young (1-3)
                    option(value=3) Middle Aged (3-7)
                    option(value=4) Adult (7-10)
                    option(value=5) Mature (10+)
            .form-sex-size
                select(class="dropdown" name="sex" id="sex" placeholder="Sex")
                    <option value="">Sex</option>
                    <option value="1">Male</option>
                    <option value="2">Female</option>
                select(class="dropdown" name="size" id="size" placeholder="Sex")
                    option(value=1) Toy
                    option(value=2) Small
                    option(value=3) Medium
                    option(value=4) Large
                    option(value=5) X-Large
            .form-textarea
                textarea(class="describe-pet" id = "description" name="description" placeholder="Describe The Pet")
            .form-image-input
                label(for="photo") Add an image of the pet:
                input(name="photo" type="text" id="photo" placeholder="photo url")
            .form-checkbox
                label(class="checkbox-label") Is the pet ok with children?
                    input(type="checkbox" id="isOkayKids" name="isOkayKids")
                    span(class="custom-checkbox")
            .form-checkbox
                label(class="checkbox-label") Is the pet ok with other pets?
                    input(type="checkbox" name="isOkayPets" id="isOkayPets")
                    span(class="custom-checkbox")
            .form-checkbox
                label(class="checkbox-label") Has this pet been adopted?
                    input(type="checkbox" name="isAdopted" id="isAdopted")
                    span(class="custom-checkbox")
            .form-submit-button
                button.button(type="submit") Submit Edit
    script(type="module" src="/js/edit-pet.js")
